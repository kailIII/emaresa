<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="account_invoice_suppliers_views_form" model="ir.ui.view">
			<field name="name">account.invoice.suppliers.views.form</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.invoice_supplier_form"/>
			<field name="arch" type="xml">
				<xpath expr="//sheet" position="attributes">
					<attribute name="class">oe_form_sheet_width_invoice_wider</attribute>
				</xpath>
			</field>
		</record>

		<record id="account_invoice_clients_views_form" model="ir.ui.view">
			<field name="name">account.invoice.clients.views.form</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.invoice_form"/>
			<field name="arch" type="xml">
				<xpath expr="//sheet" position="attributes">
					<attribute name="class">oe_form_sheet_width_invoice_wider</attribute>
				</xpath>
			</field>
		</record>

		<record id="account_move_views_form" model="ir.ui.view">
			<field name="name">account.move.views.form</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_move_form"/>
			<field name="arch" type="xml">
				<xpath expr="//sheet" position="attributes">
					<attribute name="class">oe_form_sheet_width_move_wider</attribute>
				</xpath>
			</field>
		</record>
	</data>
</openerp>
