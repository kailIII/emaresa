<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="account_account_form" model="ir.ui.view">
            <field name="name">account_account_form</field>
            <field name="model">account.account</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_account_form"/>
 	    <field name="arch" type="xml">
		<field name="active" position="after">
                	<group string="Flujo de Caja" colspan="8">
				<group>
                   			<field name="categoria"/>
                   			<field name="secuencia"/>
                   			<field name="flujo_caja"/>
				</group>
			</group>
		</field>
            </field>
	</record>
  	<record id="account_account_tree_fields" model="ir.ui.view">
            <field name="name">account_account_tree</field>
            <field name="model">account.account</field>
            <field name="type">tree</field>
 	    <field name="arch" type="xml">
                <tree string="Tipos de Cuenta">
                    <field name="name"/>
		    <field name="code"/>
		    <field name="categoria"/>
		    <field name="secuencia"/>
		    <field name="flujo_caja"/>
                </tree>
            </field>
	</record>
    </data>
</openerp>
